<% layout('./layouts/boilerplate.ejs') %>

<div
  class="container d-flex justify-content-center align-items-center mt-5 mb-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow-lg">
        <img
          crossorigin="anonymous"
          src="https://images.unsplash.com/photo-1644579137224-ed7c897488be?q=80&w=2024&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Login Camp Image"
          class="card-img-top" />
        <div class="card-body">
          <h4 class="card-title text-center mb-3">Register</h4>
          <form
            action="/register"
            method="POST"
            class="needs-validation"
            novalidate>
            <div class="form-group mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                autofocus
                class="form-control"
                type="text"
                id="username"
                name="username"
                required />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="form-group mb-3">
              <label class="form-label" for="email">Email</label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                required />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="form-group mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success w-100">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
